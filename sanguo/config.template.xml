<?xml version="1.0" encoding="UTF-8"?>
<config>
    <!--本server的ID和监听的端口-->
    <!--server用uwsgi跑起来的，这里的http, https端口是nginx中的配置-->
    <!--配置在这里的作用也就是在server启动的时候去hub注册一下此server-->
    <server>
        <id>1</id>
        <name>第一服</name>
        <ip>1.1.1.1</ip>
        <port>
            <http>0000</http>
            <https>0000</https>
        </port>
    </server>

    <redis>
        <host>127.0.0.1</host>
        <port>6380</port>
        <db>0</db>
    </redis>

    <!--在redis中cache数据的时间-->
    <cache>
        <seconds>3600</seconds>
    </cache>

    <!--是否输出战斗log-->
    <battle>
        <log>false</log>
    </battle>

    <!--测试模式是否开启-->
    <!--开启后客户端可以向/test发送命令，随意给自己添加物品-->
    <testmode>false</testmode>

    <!--发送邮件的发件人-->
    <email>
        <name>sanguo.production</name>
    </email>

    <!--下面这些配置对于每个server都要保持一致-->

    <!--加密session的key-->
    <crypto>
        <key>1234567890abcdef</key>
    </crypto>

    <mongodb>
        <host>127.0.0.1</host>
        <port>27017</port>
        <db>sanguo</db>
    </mongodb>

    <!--中心节点-->
    <hub>
        <host>127.0.0.1</host>
        <port>
            <https>8020</https>
        </port>
    </hub>

    <mailgun>
        <key>key-9jmdddog2rhqf8j-no9fq-mpiqcdo851</key>
        <domain>sandbox0bcd8cad030d405f863c68bf70fa83f9.mailgun.org</domain>
    </mailgun>

    <!-- 这里填写的 admin 是当服务器报错后 会收到邮件的人 -->
    <!-- 如果有多个，就重复多个<admin /> -->
    <admins>
        <admin name="Wang Chao" email="my_sting@163.com" />
    </admins>
</config>
